set $mod Mod4

exec source ~/.zshenv

##########################################
#                                        #
#                  Windows               #
#                                        #
##########################################

set $abc #4D567A
set $ibc #444444

# class                 border  backgr. text    indicator child_border
client.focused          $abc    $abc    $abc    $abc      $abc
client.focused_inactive $ibc    $ibc    $ibc    $ibc      $ibc
client.unfocused        $ibc    $ibc    $ibc    $ibc      $ibc
client.urgent           $ibc    $ibc    $ibc    $ibc      $ibc
client.placeholder      $ibc    $ibc    $ibc    $ibc      $ibc

client.background       #ffffff


mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

hide_edge_borders both
for_window [class="^.*"] border pixel 2
gaps inner 3
gaps outer 3

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

floating_modifier $mod

##########################################
#                                        #
#                  Bindings              #
#                                        #
##########################################

bindsym $mod+w exec firefox
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+shift+p exec ~/.config/polybar/launch.sh
bindsym $mod+Return exec st
bindsym $mod+Shift+e exec ~/.config/i3/menu.sh

bindsym Print exec flameshot screen -p ~/Screenshots

##########################################
#                                        #
#                  Workspaces            #
#                                        #
##########################################

set $ws1 ""
set $ws2 ""
set $ws3 ""
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 ""
set $ws11 ""

set $monitor_left HDMI-0
set $monitor_right DP-1

workspace <workspace_id> output <monitor_id>

workspace $ws1 output $monitor_left
workspace $ws2 output $monitor_right
workspace $ws3 output $monitor_right
workspace $ws4 output $monitor_right
workspace $ws5 output $monitor_right
workspace $ws6 output $monitor_right
workspace $ws7 output $monitor_right
workspace $ws8 output $monitor_right
workspace $ws9 output $monitor_right
workspace $ws10 output $monitor_left
workspace $ws11 output $monitor_left

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+F6 workspace $ws11

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

assign [class="firefox"] $ws1
assign [class="Tor Browser"] $ws1
assign [class="listener"] $ws1
assign [class="st"] $ws2
assign [class="Steam"] $ws3
assign [class="mpv"] $ws10

for_window [class="TelegramDesktop"] floating enable
for_window [class="Tor Browser"] floating enable
for_window [class="Steam"] floating enable

##########################################
#                                        #
#                 Startup                #
#                                        #
##########################################

exec_always --no-startup-id autotiling
exec_always --no-startup-id feh --bg-fill ~/Wallpaper/wall

exec --no-startup-id xrandr --output HDMI-0 --primary --mode 1920x1080 --output DP-1 --mode 1920x1080
exec --no-startup-id picom --experimental-backends
exec --no-startup-id pacman -Qqen > .config/packages/packages.txt
exec --no-startup-id pacman -Qqem > .config/packages/packages_aur.txt
exec --no-startup-id ~/.config/polybar/launch.sh
