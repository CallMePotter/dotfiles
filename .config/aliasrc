#!/bin/sh

# color
alias ls='lsd'
alias grep='grep --color=auto'
alias yay='yay --color=auto'
alias pacman='pacman --color=auto'

# platformio
alias piorun='pio run --target upload'
alias piomonitor='pio device monitor'

# dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# suckless
alias strc='nvim ~/.config/st/config.def.h'
alias dwmrc='nvim ~/.config/dwm/config.def.h'
alias xinitrc='nvim ~/.xinitrc'

# neovim
alias nvimrc='nvim ~/.config/nvim/init.vim'

# zsh
alias zshrc='nvim ~/.config/zsh/.zshrc'
alias aliasrc='nvim ~/.config/aliasrc'
alias zshenv='nvim ~/.config/env'
